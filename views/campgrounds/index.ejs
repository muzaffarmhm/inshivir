<% layout('/layouts/boilerplate.ejs') %>
<h1>Campgrounds in India!</h1>
<% for(let campground of campgrounds) { %>
<div class="card mb-3">
   <div class="row">
      <div class="col-md-4">
         <img class="img-fluid" src="<%= campground.image[0].url %>" alt="Card image cap">
      </div>
      <div class="col-md-8">
         <div class="card-body">
            <h5 class="card-title">
            <%= campground.title %>
            </h2>
            <p class="card-text">
               <%= campground.description %>
            </p>
            <p class="card-text">
               <small class="text-muted">
               <%= campground.location %>
               </small>
            </p>
            <a href="/camps/<%= campground.id %>" class="btn btn-primary">View <%= campground.title
               %> </a>
         </div>
      </div>
   </div>
</div>
<% } %>
</body>
</html>